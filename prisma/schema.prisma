generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MEMBER
}

model User {
  id       String   @id @default(cuid())
  username String   @unique @db.VarChar(15)
  password String   @db.VarChar(255)
  role     UserRole @default(MEMBER)

  @@map("users")
}

model Category {
  id        String  @id @default(cuid())
  parent_id String?
  name      String  @unique

  parent_category Category? @relation("CategoryToParent", fields: [parent_id], references: [id])

  sub_categories Category[] @relation("CategoryToParent")

  @@map("categories")
}
